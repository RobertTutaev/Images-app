extends layout

block content
  h1= title
  
  div
  form(action='/signup', method='post')
    label Логин
    br
    input(type='text', name='username', id='username', placeholder='Логин', required='true')
    br
    label Пароль
    br
    input(type='password', name='password', id='password', placeholder='Пароль', required='true')
    br
    input(type='checkbox', name='is_admin', id='is_admin', value='1')
    label Администратор
    br
    br
    input(type='submit', value='Регистрация')
    br
    br
    b
      | #{typeof(errorMessage) !== 'undefined' ? errorMessage : ''}
